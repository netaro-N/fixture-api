        option(value="Real Sociedad")
        option(value="Roma")
        option(value="SD Eibar")
        option(value="SD Huesca")
        option(value="Sevilla FC")
        option(value="Valencia CF")
        option(value="Villarreal CF")
    div.form-group
      label(for="homeScore") homeScore
      input(type="text" name="homeScore" value=fixture.homeScore)#homeScore
    div.form-group
      label(for="awayScore") awayScore
      input(type="text" name="awayScore" value=fixture.awayScore)#awayScore
