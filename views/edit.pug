        option(value="ラ・リーガ第")
        option(value="チャンピオンズリーグ")
        option(value="国王杯")
    div.form-group
      label(for="homeTeam") homeTeam
      input(type="text" name="homeTeam" autocomplete="on" list="HORM" value=fixture.homeTeam)#homeTeam
